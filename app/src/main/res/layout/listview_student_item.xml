<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/ls_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권희창"
        android:textSize="15dp"
        android:layout_marginStart="39dp"
        android:layout_alignTop="@+id/ls_student_status"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ls_student_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미처리"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/ls_BT_attendance"
        android:layout_alignStart="@+id/ls_BT_attendance" />


    <Button
        android:id="@+id/ls_BT_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결석"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ls_student_name" />
    <Button
        android:id="@+id/ls_BT_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지각"
        android:layout_marginStart="19dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ls_BT_absence" />
    <Button
        android:id="@+id/ls_BT_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출석"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ls_BT_late" />

</RelativeLayout>